<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dollarsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="$"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/dollarvalue"
        app:layout_constraintEnd_toStartOf="@+id/dollarvalue"
        app:layout_constraintTop_toTopOf="@+id/dollarvalue" />

    <TextView
        android:id="@+id/dollarvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/eurovalue"
        app:layout_constraintStart_toStartOf="@+id/eurovalue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dollarlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dólar"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/dollarvalue"
        app:layout_constraintStart_toStartOf="@+id/dollarvalue" />

    <TextView
        android:id="@+id/eurolabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Euro"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/eurovalue"
        app:layout_constraintStart_toStartOf="@+id/eurovalue" />

    <TextView
        android:id="@+id/eurosign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="€"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/eurovalue"
        app:layout_constraintEnd_toStartOf="@+id/eurovalue"
        app:layout_constraintTop_toTopOf="@+id/eurovalue" />

    <TextView
        android:id="@+id/eurovalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.41000003" />

    <TextView
        android:id="@+id/sterlinglabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Libras esterlinas"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/sterlingvalue"
        app:layout_constraintStart_toStartOf="@+id/sterlingvalue" />

    <TextView
        android:id="@+id/sterlingvalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0,00"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/backbutton"
        app:layout_constraintStart_toStartOf="@+id/eurovalue"
        app:layout_constraintTop_toBottomOf="@+id/eurovalue" />

    <TextView
        android:id="@+id/sterlingsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="£"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="@+id/sterlingvalue"
        app:layout_constraintEnd_toStartOf="@+id/sterlingvalue"
        app:layout_constraintTop_toTopOf="@+id/sterlingvalue" />

    <Button
        android:id="@+id/backbutton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:padding="12dp"
        android:text="Voltar"
        android:textSize="24sp"
        app:icon="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sterlingvalue" />

</androidx.constraintlayout.widget.ConstraintLayout>