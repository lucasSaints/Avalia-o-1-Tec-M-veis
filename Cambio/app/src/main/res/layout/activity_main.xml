<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittextnum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginEnd="80dp"
        android:ems="10"
        android:hint="1,00"
        android:inputType="numberDecimal"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/reallabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Real"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/edittextnum"
        app:layout_constraintStart_toStartOf="@+id/edittextnum" />

    <TextView
        android:id="@+id/reaslsign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="R$"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="@+id/edittextnum"
        app:layout_constraintEnd_toStartOf="@+id/edittextnum"
        app:layout_constraintTop_toTopOf="@+id/edittextnum" />

</androidx.constraintlayout.widget.ConstraintLayout>